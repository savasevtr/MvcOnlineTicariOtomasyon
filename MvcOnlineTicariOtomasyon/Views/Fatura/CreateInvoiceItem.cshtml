@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "Yeni Fatura Kalem Girişi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Fatura/Details/@ViewBag.FaturaID" class="btn btn-success btn-sm">Fatura Kalem Listesi</a>
                </div>
            </div>

            <div class="box-body">
                <form action="/Fatura/CreateInvoiceItem" method="post">

                    <input type="hidden" name="FaturaID" value="@ViewBag.FaturaID" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Aciklama)
                                @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Miktar)
                                @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.BirimFiyat)
                                @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Tutar)
                                @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>