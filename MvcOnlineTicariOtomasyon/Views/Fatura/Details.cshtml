@using MvcOnlineTicariOtomasyon.Models
@model List<FaturaKalem>
@{
    ViewBag.Title = "Fatura Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Fatura/Index" class="btn btn-primary btn-sm">Faturalar</a>
                    <a href="/Fatura/CreateInvoiceItem/@ViewBag.FaturaID" class="btn btn-success btn-sm">Yeni Fatura Kalem Girişi</a>
                </div>
            </div>

            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" style="width: 100% !important;">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 5%">ID</th>
                                <th>Açıklama</th>
                                <th>Miktar</th>
                                <th>Birim Fiyat</th>
                                <th>Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.FaturaKalemID</td>
                                    <td>@item.Aciklama</td>
                                    <td>@item.Miktar</td>
                                    <td>@item.BirimFiyat</td>
                                    <td>@item.Tutar</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>