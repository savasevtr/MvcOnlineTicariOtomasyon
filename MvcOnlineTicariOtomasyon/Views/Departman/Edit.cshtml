@model MvcOnlineTicariOtomasyon.Models.Siniflar.Departman
@{
    ViewBag.Title = "Departman Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Departman/Index" class="btn btn-success btn-sm">Departman Listesi</a>
                </div>
            </div>

            <div class="box-body">
                @using (Html.BeginForm("Edit", "Departman", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.DepartmanID)

                    <div class="form-group">
                        @Html.LabelFor(x => x.DepartmanAd)
                        @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-success">Güncelle</button>
                }
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>