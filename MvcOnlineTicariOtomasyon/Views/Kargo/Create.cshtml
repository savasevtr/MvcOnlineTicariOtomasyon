@model MvcOnlineTicariOtomasyon.Models.KargoDetay
@{
    ViewBag.Title = "Yeni Kargo Girişi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Kargo/Index" class="btn btn-success btn-sm">Kargolar</a>
                </div>
            </div>

            <div class="box-body">
                @using (Html.BeginForm("Create", "Kargo", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Personel)
                                @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Alici)
                                @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Tarih)
                                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control datepicker" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.TakipKodu)
                                <input type="text" name="TakipKodu" value="@ViewBag.takipkodu" class="form-control" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Aciklama)
                                @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Kaydet</button>
                }
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>

<script src="~/adminlte2/bower_components/jquery/dist/jquery.min.js"></script>

<script>

    $(function () {
        $('.datepicker').datepicker({
            autoclose: true,
            format: 'yyyy-mm-dd'
        })
    })

</script>

