@using MvcOnlineTicariOtomasyon.Models
@model List<KargoDetay>
@{
    ViewBag.Title = "Kargolar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Kargo/Create" class="btn btn-success btn-sm" style="margin-left: 10px;">Yeni Kargo Girişi</a>
                </div>
                <div class="box-tools pull-right">
                    @using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
                    {
                        <div class="input-group input-group-sm hidden-xs" style="width: 300px;">
                            <input type="text" name="p" class="form-control pull-right" placeholder="Kargo Takip Numarası">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" style="width: 100% !important;">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 5%">ID</th>
                                <th>Personel</th>
                                <th>Alıcı</th>
                                <th>Tarih</th>
                                <th>Takip Kodu</th>
                                <th class="text-center" style="width: 20%">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="text-center">@item.KargoDetayID</td>
                                <td>@item.Personel</td>
                                <td>@item.Alici</td>
                                <td>@item.Tarih</td>
                                <td>@item.TakipKodu</td>
                                <td class="text-center">
                                    <a href="/Kargo/Details/@item.TakipKodu" class="btn btn-primary btn-xs">Detaylar</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>