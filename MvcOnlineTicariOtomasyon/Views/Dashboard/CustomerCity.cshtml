@model List<MvcOnlineTicariOtomasyon.Models.SehirMusteriGrup>
@{
    Layout = null;
}

<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Müşteri Şehir Tablosu</h3>

        <div class="box-tools">
        </div>
    </div>
    <div class="box-body no-padding">
        <table class="table">
            <tbody>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Şehir</th>
                    <th>Progress</th>
                    <th style="width: 40px">Adet</th>
                </tr>

                @{ int index = 0; }

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{ index++; }@index</td>
                        <td>@item.Sehir</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-red">@item.Sayi</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>