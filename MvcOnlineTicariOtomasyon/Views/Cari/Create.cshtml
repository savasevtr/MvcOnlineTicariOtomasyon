@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cari
@{
    ViewBag.Title = "Yeni Cari Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Cari/Index" class="btn btn-success btn-sm">Cariler</a>
                </div>
            </div>

            <div class="box-body">
                <form action="/Cari/Create" method="post">

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariAd)
                        @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariSoyad)
                        @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariMail)
                        @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariSehir)
                        @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>