@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Cariler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row my-4">
    <div class="col-md-12">
        <a href="/Cari/Create" class="btn btn-success float-left mb-3">Cari Ekle</a>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 5%">ID</th>
                        <th>Cari Ad</th>
                        <th>Cari Soyad</th>
                        <th>Cari Şehir</th>
                        <th>Cari Mail</th>
                        <th class="text-center" style="width: 20%">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="text-center">@item.CariID</td>
                        <td>@item.CariAd</td>
                        <td>@item.CariSoyad</td>
                        <td>@item.CariSehir</td>
                        <td>@item.CariMail</td>
                        <td class="text-center">
                            <a href="/Cari/Details/@item.CariID" class="btn btn-info btn-sm">Satış Geçmişi</a>
                            <a href="/Cari/Edit/@item.CariID" class="btn btn-primary btn-sm">Düzenle</a>
                            <a href="/Cari/Delete/@item.CariID" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

