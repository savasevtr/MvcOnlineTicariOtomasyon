@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Cariler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Cari/Create" class="btn btn-success btn-sm">Cari Ekle</a>
                </div>
            </div>

            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" style="width: 100% !important;">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 5%">ID</th>
                                <th>Cari Ad</th>
                                <th>Cari Soyad</th>
                                <th>Cari Şehir</th>
                                <th>Cari Mail</th>
                                <th class="text-center" style="width: 20%">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.CariID</td>
                                    <td>@item.CariAd</td>
                                    <td>@item.CariSoyad</td>
                                    <td>@item.CariSehir</td>
                                    <td>@item.CariMail</td>
                                    <td class="text-center">
                                        <a href="/Cari/Details/@item.CariID" class="btn btn-info btn-sm">Satış Geçmişi</a>
                                        <a href="/Cari/Edit/@item.CariID" class="btn btn-primary btn-sm">Düzenle</a>
                                        <a href="/Cari/Delete/@item.CariID" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>