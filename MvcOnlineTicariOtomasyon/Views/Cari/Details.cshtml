@using MvcOnlineTicariOtomasyon.Models
@model List<SatisHareket>
@{
    ViewBag.Title = "Satış Geçmişi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.cari - Satış Geçmişi</h3>

                <div class="box-tools pull-right">
                    <a href="/Cari/Index" class="btn btn-success btn-sm">Cari Listesi</a>
                </div>
            </div>

            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" style="width: 100% !important;">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 5%">ID</th>
                                <th>Ürün</th>
                                <th>Personel</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.SatisID</td>
                                    <td>@item.Urun.UrunAd</td>
                                    <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                                    <td>@item.Fiyat</td>
                                    <td>@item.Adet</td>
                                    <td>@item.ToplamTutar</td>
                                    <td>@item.Tarih</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>