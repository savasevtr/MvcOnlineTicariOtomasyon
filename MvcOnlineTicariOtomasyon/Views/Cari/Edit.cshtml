@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cari
@{
    ViewBag.Title = "Cari Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.title</h3>

                <div class="box-tools pull-right">
                    <a href="/Cari/Index" class="btn btn-success float-left mb-3">Cariler</a>
                </div>
            </div>

            <div class="box-body">

                @using (Html.BeginForm("Edit", "Cari", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.CariID)

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariAd, new { @class = "mb-1" })
                        @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red;" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariSoyad, new { @class = "mb-1" })
                        @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:red;" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariMail, new { @class = "mb-1" })
                        @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.CariSehir, new { @class = "mb-1" })
                        @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-success my-2">Güncelle</button>
                }

            </div>

            <div class="box-footer"></div>

        </div>
    </div>
</div>